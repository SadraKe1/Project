<%- include ('../partials/header.ejs') %>
<%- include ('../partials/main_nav.ejs') %>

<!-- Content for add page -->
<div class="container-fluid" style="background-color: #161719">
<div class="row">
   <div class="col-md-offset-3 col-md-6">
   <h1 style="color:white"><%= title %></h1>


   <form class="form" method="post">
   <div class="form-group">
   <label for="jobtitleTextField" style="color:white" class = "fw-bold fs-3 text"> Title of The Job</label>
   <input type="text" class="form-control text-white bg-dark"
   id="jobtitleTextField"
   placeholder="Enter the job title"
   name="jobtitle" required>
   </div>

<div class="form-group">
   <label for="requirementsTextField" style="color:white" class = "fw-bold fs-3 text"> Requirements</label>
   <input type="text" class="form-control text-white bg-dark"
   id="requirementsTextField"
   placeholder="Enter the job's requirements"
   name="requirements" required>
   </div>

   <div class="form-group">
   <label for="SalaryTextField" style="color:white" class = "fw-bold fs-3 text">Hourly Salary</label>
   <input type="text" class="form-control text-white bg-dark" 
   id="publishTextField"
   placeholder=" Enter the hourly salary of the job in numerical format"
   name="hourlysalary" required>
   </div>

   <div class="form-group">
   <label for="availabilityTextField" style="color:white" class = "fw-bold fs-3 text"> Availability</label>
   <textarea type="text" class="form-control text-white bg-dark" 
   id="availabilityTextField"
   placeholder="Enter the availability that the job requires"
   name="availability" required></textarea>
   </div>

<br>
<button class="btn-btn-primary" type="submit">
<i class="fas fa-edit"></i> Submit
</button>

<a href="/JobSearch-list" class="btn btn-warning">
<i class="fas fa-undo"></i>Cancel</a>
</form>

   </div>
   </div>
</div>
<%- include ('../partials/bottom_nav.ejs') %>
<%- include ('../partials/footer.ejs') %>
